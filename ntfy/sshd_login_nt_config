#!/bin/bash
if [ "${PAM_TYPE}" = "open_session" ]; then
  curl \
    -H "Authorization: Bearer tk_deuwhy9aof7gou7ghx0l7z7dkmj7q" \
    -H prio:high \
    -H tags:warning \
    -d "SSH login: ${PAM_USER}@$HOSTNAME from ${PAM_RHOST}" \
    ntfy.drokdev.xyz/alerts
fi
